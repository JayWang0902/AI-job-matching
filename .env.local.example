# Local Development Environment Variables
# Copy this to .env.local and fill in your values

# Environment
ENV=development
DEBUG=true

# Database (Use RDS for consistency, or local postgres)
# Option 1: Use same RDS as production (recommended for consistency)
DATABASE_URL=postgresql://jaywang:YOUR_PASSWORD@database-1.cgz024k6moxa.us-east-1.rds.amazonaws.com:5432/ai_job_matching

# Option 2: Use local postgres (uncomment if using local DB)
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ai_job_matching_dev

# Redis (local container)
REDIS_URL=redis://redis:6379/0

# AWS S3 (use same bucket or create a dev bucket)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-dev-bucket-name

# OpenAI (REQUIRED: Get from https://platform.openai.com/api-keys)
# IMPORTANT: Replace with your real API key starting with 'sk-'!
OPENAI_API_KEY=sk-placeholder-replace-with-real-key

# JWT (Generate a secure random string for local dev)
SECRET_KEY=local-dev-secret-key-min-32-chars-change-this-to-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (allow localhost)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
